{
  "name": "prep-area",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "predev": "node scripts/copy-wasm.js && node scripts/generate-filter-data.mjs",
    "prebuild": "node scripts/copy-wasm.js && node scripts/generate-filter-data.mjs",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "cap:sync": "npm run build && cap sync android",
    "cap:open": "cap open android",
    "db:sql": "node scripts/db-sql.mjs",
    "images:split": "node scripts/split-card-images.mjs",
    "docker:build": "node scripts/docker-build.mjs",
    "docker:run": "docker run --rm -p 8080:80 prep-area:latest"
  },
  "dependencies": {
    "@capacitor/app": "^6.0.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/filesystem": "^6.0.1",
    "@capawesome/capacitor-file-picker": "^6.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/cli": "^6.1.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "jsdom": "^27.0.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vite-plugin-pwa": "^0.20.0",
    "vitest": "^3.2.4"
  }
}
